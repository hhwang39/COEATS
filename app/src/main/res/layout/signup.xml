<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/signup_background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="31dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3000000">

            <TextView
                android:id="@+id/SignUpUsername"
                android:layout_width="135dp"
                android:layout_height="49dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:includeFontPadding="true"
                android:text="Username"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputUsername"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SignUpEmail"
                android:layout_width="135dp"
                android:layout_height="49dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:includeFontPadding="true"
                android:text="Email"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputEmail"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textEmailAddress|textPassword"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputUsername" />

            <TextView
                android:id="@+id/SignUpPassword"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:text="Password"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputPassword"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputEmail" />

            <TextView
                android:id="@+id/SignUpPasswordConfirm"
                android:layout_width="135dp"
                android:layout_height="49dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:includeFontPadding="true"
                android:text="Confirm"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputPasswordConfirm"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputPasswordConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputPassword" />


            <TextView
                android:id="@+id/SignUpFirstname"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:text="First Name"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputFirstname"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputFirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputPasswordConfirm" />

            <TextView
                android:id="@+id/SignUpLastname"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:text="Last Name"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputLastname"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputLastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputFirstname" />


            <TextView
                android:id="@+id/SignUpPhone"
                android:layout_width="135dp"
                android:layout_height="49dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/finger_paint"
                android:includeFontPadding="true"
                android:text="Phone"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpInputPhone"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/SignUpInputPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:theme="@style/MyEditText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputLastname" />

            <Button
                android:id="@+id/SignUpBack"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="130dp"
                android:layout_height="62dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="63dp"
                android:text="Back"
                app:layout_constraintBaseline_toBaselineOf="@+id/SignUpSubmit"
                app:layout_constraintEnd_toStartOf="@+id/SignUpSubmit"
                app:layout_constraintHorizontal_bias="0.317"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/SignUpSubmit"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="50dp"
                android:text="Submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/search_guide"
                app:layout_constraintTop_toBottomOf="@+id/SignUpInputPhone" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>