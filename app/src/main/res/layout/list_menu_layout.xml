<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_res_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/listItem"
        android:layout_toStartOf="@+id/list_order_cd"
        android:text="Gongbaojiding"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_res_type"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/list_order_cd"
        android:layout_alignStart="@+id/list_res_name"
        android:layout_below="@+id/list_res_name"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/list_order_cd"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_order_cd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/list_menu_amount"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_menu_amount"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_menu_plus"
        android:layout_toStartOf="@id/list_menu_plus"
        android:gravity="right"
        android:inputType="number"
        android:text="20"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/list_menu_plus"
        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/list_order_cd"
        android:layout_alignTop="@+id/list_res_name"
        android:layout_marginTop="5dp"
        android:minHeight="10dp"
        android:minWidth="10dp"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/list_menu_minus"
        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/list_menu_amount"
        android:layout_toStartOf="@+id/list_menu_amount"
        android:minHeight="10dp"
        android:minWidth="10dp"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>